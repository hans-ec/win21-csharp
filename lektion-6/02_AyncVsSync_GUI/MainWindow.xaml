<Window x:Class="_02_AyncVsSync_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_AyncVsSync_GUI"
        mc:Ignorable="d"
        Title="Async vs. Sync Demo (GUI)" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button x:Name="BlockingBtn" Grid.Row="0" Margin="10 15 10 5" Padding="10" FontSize="16" Content="Blocking Demo (Sync)" Click="BlockingBtn_Click" />
        <Button x:Name="NonBlockingBtn" Grid.Row="1" Margin="10 5 10 15" Padding="10" FontSize="16" Content="Non-Blocking Demo (Async)" Click="NonBlockingBtn_Click" />
        <TextBlock x:Name="ResultWindow" Grid.Row="2" Margin="10" FontSize="14" />
    </Grid>
</Window>